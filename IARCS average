#include <iostream>
#include <vector>
#include <algorithm>
using namespace std;

int main() {
    int n;
    cin>>n;
    vector<int> v1;
    for(int i = 0; i< n; i++){
        int x;
        cin>>x;
        v1.push_back(x);
    }
    int count = 0;
    for(int i = 0 ; i<n;i++){
        for(int j =1 ; j< n;j++){
            if(i != j){
             int avg = (v1[i]+v1[j])/2;
             std::vector<int>::iterator vi;
             vi = v1.begin();
             vi = vi+i;
             if(binary_search(vi, v1.end(), avg)){
                 vi = v1.begin()-i;
                 count++;
             };
            }
        }
    }
    std::cout<<count;
}
